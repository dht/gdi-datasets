{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "ES2022",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationDir": "dist/dts",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["types-base", "@gdi/types", "@types/jest", "@types/node"]
    },
    "include": [
        "src/*.ts",
        "test/*.ts",
        "src/json-schemas/schema.css.ts",
        "src/datasets/seeding/dataset.libraryWidgets.ts",
        "src/data/data.articles.ts"
    ]
}
